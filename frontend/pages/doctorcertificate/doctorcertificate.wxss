/* pages/doctorcertificate/doctorcertificate.wxss */
.container {
  padding: 20px;
}

.background {
  width: 140%;
  height: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: -1;
}

.upload-info {
  margin-bottom: 20px;
}

.upload-text {
  color: #333;
  font-size: 16px;
  text-align: left;
}

.upload-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20px;
}

.file-count {
  color: #666;
  font-size: 14px;
}

.confirm-btn {
  margin-top: 50px;
  text-align: center;
}