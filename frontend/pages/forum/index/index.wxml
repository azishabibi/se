<view>
<view class="page-container">
  <scroll-view class="post-list" scroll-y="true">
    <block wx:for="{{ posts }}" wx:key="id">
      <view class="post-card" bindtap="navigateToPostDetail" data-id="{{item.id}}">
        <van-card
          title="{{ item.title }}"
          thumb="{{ item.image }}"
          lazy-load>
          <view slot="footer">
            <text class="post-description">{{ item.description }}</text>
            <view class="post-info">
              <text class="post-author">作者: {{ item.author }}</text>
              <text class="post-likes">点赞: {{ item.likes }}</text>
              <text class="post-shares">分享: {{ item.shares }}</text>
            </view>
          </view>
        </van-card>
      </view>
    </block>
  </scroll-view>
</view>

  <!-- 添加底部发布按钮 -->
  <van-button 
    class="create-post-fab"
    bind:click="navigateToCreatePost"
    icon="edit"
    round
    type="info"
  ></van-button>
</view>

