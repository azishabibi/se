<view class="page-container">
  <!-- 加载动画（当数据正在加载时显示） -->
  <view class="loading-animation" wx:if="{{isLoading}}">
  <van-loading type="spinner" size="30px"></van-loading>
  <text>加载中...</text>
</view>


  <!-- 帖子列表 -->
  <scroll-view class="post-list" scroll-y="true">
    <block wx:for="{{ posts }}" wx:key="id">
      <view class="post-card" bindtap="navigateToPostDetail" data-id="{{item.post_id}}">
        <van-card title="{{ item.title }}" thumb="{{ item.avatar }}" lazy-load>
          <view slot="footer">
            <view class="post-info">
              <text class="post-author">作者: {{ item.author }}</text>
              <text class="post-likes">点赞: {{ item.like_counts }}</text>
              <text class="post-comments">评论: {{ item.comment_counts }}</text>
            </view>
          </view>
        </van-card>
      </view>
    </block>
  </scroll-view>

  <!-- 底部按钮 -->
  <van-button class="create-post-fab" bind:click="navigateToCreatePost" icon="edit" round type="info"></van-button>
  <van-button class="navigate-personal-info" bind:click="navigateToPersonalInfo" icon="user-o" round type="primary">个人信息</van-button>
</view>
