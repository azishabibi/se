/* index.wxss 示例 */
.custom-navigation-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 40px; /* 可以根据需要调整高度 */
  background-color: #fff; /* 背景色 */
}

.navigation-title {
  font-size: 40px; /* 标题字体大小 */
  font-weight: bold; /* 字体加粗 */
}


/* 列表样式 */
.post-list {
  margin-top: 60px; /* 调整这个值以确保足够的空间 */
  margin-bottom: 60px; /* 留出底部按钮的空间 */
}


/* 每个帖子卡片的样式 */
.post-card {
  margin-bottom: 10px;
}

/* 底部按钮样式 */
.create-post-button {
  position: fixed;
  left: 50%;
  bottom: 20px;
  transform: translateX(-50%);
  width: 90%;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* 添加底部按钮样式 */
.create-post-button {
  position: fixed;
  left: 50%;
  bottom: 20px;
  transform: translateX(-50%);
  width: 90%; 
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}
.create-post-fab {
  position: fixed;
  right: 20px; /* 距离右边界20像素 */
  bottom: 20px; /* 距离底边界20像素 */
  width: 50px; /* 按钮宽度 */
  height: 50px; /* 按钮高度 */
  line-height: 50px; /* 使图标垂直居中 */
  padding: 0; /* 移除内边距 */
  box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.3); /* 可选：添加阴影效果 */
}
.post-description {
  margin-bottom: 5px;
}

.post-info {
  display: flex;
  justify-content: space-between;
  font-size: 14px;
}

.post-author, .post-likes, .post-shares {
  margin-right: 10px;
}
