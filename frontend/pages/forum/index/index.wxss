.custom-navigation-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60px;
  background-color: #f8f8f8;
  border-bottom: 1px solid #ebebeb;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
}


.navigation-title {
  font-size: 20px;
  color: #333;
}

.post-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  gap: 10px;
}

.post-card {
  width: 90%;
  max-width: 500px;
  margin: 20px auto;
  height: 120px;
}

.van-card {
  height: auto;
  min-height: 400px;
}

.van-card__title {
  font-size: 16px;
}

.van-card__thumb {
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
}

.post-info {
  display: flex;
  justify-content: space-between;
  color: #666;
  font-size: 13px;
  transition: color 0.3s;
}

.post-info:hover {
  color: #333;
}

.create-post-button {
  position: fixed;
  right: 20px;
  bottom: 20px;
  z-index: 1000;
  width: 50px;
  height: 50px;
  border-radius: 25px;
  background: linear-gradient(45deg, #1989fa, #1c80fb);
  color: white;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24px;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.create-post-button:hover {
  transform: scale(1.1);
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.4);
}
.swiper-item {
  width: 100%; /* 使 swiper-item 占据全部宽度 */
  height: 240px; /* 设置固定高度 */
}

.post-cover {
  width: 100%;
  height: 100%; /* 图片高度填充整个 swiper-item */
  object-fit: cover; /* 确保图片不失真 */
}
