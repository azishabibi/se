<!--pages/info/info.wxml-->
<view class="container more">
  <view class="user flex-wrp">
    <view class="avatar flex-item">
      <image class="userinfo-avatar" src= "{{getApp().globalData.avatarUrl}}" background-size="cover"></image>
    </view>
    <view class="user-info flex-item">
      <text class="userinfo-nickname">{{nickname}}</text>
      <text class="edit" bindtap="handleEditInfo">查看或编辑个人主页</text>
    </view>
  </view>

  <view class="my">
    <navigator url="/pages/myfollowing/myfollowing">
      <view class="my-item flex-wrp">
        <view class="myitem-icon flex-item" >
          <image src="/images/info/eye.png"></image>
        </view>
        <view class="myitem-name flex-item">
          <text>我的关注</text>
        </view>
      </view>
    </navigator>
    <view class="my-item flex-wrp">
      <view class="myitem-icon flex-item" >
        <image src="/images/info/star.png"></image>
      </view>
      <view class="myitem-name flex-item">
        <text>我的收藏</text>
      </view>
    </view>
    <view class="my-item flex-wrp">
      <view class="myitem-icon flex-item" >
        <image src="/images/info/draft.png"></image>
      </view>
      <view class="myitem-name flex-item">
        <text>我的草稿</text>
      </view>
    </view>
    <view class="my-item flex-wrp">
      <view class="myitem-icon flex-item" >
        <image src="/images/info/recent.png"></image>
      </view>
      <view class="myitem-name flex-item">
        <text>最近浏览</text>
      </view>
    </view>

  </view>
</view>
