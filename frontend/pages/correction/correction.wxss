/* pages/correction/correction.wxss */
.tabs{
  width:90%;
  display: block; 
  box-sizing: border-box; 
  position: relative;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  box-sizing: border-box;
}

.background {
  width: 140%;
  height: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: -1;
}

.circle-container {
  display: flex;
  justify-content: center;
  margin-top: 50px;
  margin-bottom: 10px;
  font-size: 14px;
}

.button-container {
  display: flex;
  justify-content: center;
  margin-top: 30px;
  margin-bottom: 10px;
}

.wear-tips {
  display: flex;
  justify-content: center;
  margin-top: 30px;
}

.wear-tips-text {
  color: #999;
  font-size: 14px;
}

.progress-container {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  margin-top: 70px;
}

.progress-text {
  font-size: 14px;
  margin-bottom: 20px;
}

.count-text-large {
  font-size: 50px;
}

.progress-bar-container {
  display: flex;
  align-items: center;
  margin-top: 20px;
  width: 100%;
  height: 80px;
}

.progress-slider-container {
  justify-content: center;
  align-items: center;
  height: 30px;
  margin: 15px;
}

.van-slider{
  width: 90%;
}

.date-container {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  margin-top: 40px;
  font-size: 14px;
}

.date-container2 {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  margin-top: 40px;
  font-size: 50px;
}

.databutton-container {
  display: flex;
  justify-content: center;
  margin-top: 70px;
  margin-bottom: 10px;
}

.clockin-container {
  display: flex;
  justify-content: space-between;
  padding-left: 50px;
  padding-right: 50px;
  margin-top: 30px;
}