<!--pages/edituserinfo/edituserinfo.wxml-->
<view class="container">
  <van-cell-group>
    <van-field
      value= "{{ nickname }}"
      label="用户名"
      placeholder="{{nickname}}"
      bindblur="handleInputNickname"
    />

  <van-radio-group value="{{gender}}" 
  bind:change="handleChooseGender">
    <van-cell title="性别">
      <van-radio slot="right-icon" name="1">男</van-radio>
      <van-radio slot="right-icon" name="2">女</van-radio>
    </van-cell>
  </van-radio-group>

    <van-field
      value="{{email}}"
      type="email"
      label="邮箱"
      placeholder="{{email}}"
      bindblur="handleInputEmail"
    />

    <van-field
      value="{{mobile}}"
      type="mobile"
      label="电话"
      placeholder="{{mobile}}"
      bindblur="handleInputMobile"
    />

    <van-field
      value="{{birthday}}"
      type="birthday"
      label="生日"
      readonly
      placeholder="{{birthday}}"
      bind:click-input="handleInputBirthday"
    />
    <van-popup 
    style="width: 90%; max-width: 600rpx;" 
    position="bottom"
    show="{{showPopup}}">
      <van-datetime-picker
        type="date"
        value="{{popupDate}}"
        minDate="{{minDate}}"
        maxDate="{{maxDate}}"
        bind:confirm="onConfirmDate"
        bind:cancel="onCancelDate"
      />
    </van-popup>

    <van-field
      value="{{introduce}}"
      type="introduce"
      label="自我介绍"
      placeholder="{{introduce}}"
      bind:blur="handleInputIntroduce"
    />
    <van-uploader
    bind:after-read="handleAfterRead"
    file-list="{{ fileList }}"
    max-count="1"
    accept="image">
      <van-button icon="photo" type="info">上传头像</van-button>
    </van-uploader>
  </van-cell-group>

  <van-button 
    type="info"
    bind:click="handleChangeInfo"
  >确认</van-button>
</view>